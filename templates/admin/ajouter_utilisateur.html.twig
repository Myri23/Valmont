{# On étend le template de base pour garder la structure globale du site#}
{% extends 'base.html.twig' %}

{% block body %}
    <header class="hero">
        {# Titre principal de la page #}
        <h1>Valmont - Ajouter un utilisateur</h1>
    </header>

    <main class="container-form">
        <section class="card-form">
	    {# Sous-titre pour la section formulaire #}
            <h2 class="title-form">Ajouter un utilisateur</h2>

            {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
            <fieldset class="fieldset-form">
            
                {# Chaque champ du formulaire est affiché avec son label et son champ d'entrée #}
                {{ form_row(form.login) }}
                {{ form_row(form.mot_de_passe) }}
                {{ form_row(form.nom) }}
                {{ form_row(form.prenom) }}
                {{ form_row(form.date_naissance) }}
                {{ form_row(form.sexe) }}
                {{ form_row(form.email) }}
                {{ form_row(form.type_membre) }}
                {{ form_row(form.photo_url) }}
                
                {# Boutons pour soumettre ou réinitialiser le formulaire #}
                <div class="btn-form">
                    <button type="submit">Ajouter</button>
                    <button type="reset">Réinitialiser</button>
                </div>

            </fieldset>
            {{ form_end(form) }}
        </section>
    </main>

    <footer>
        <p>&copy; 2025 - Valmont | Ville connectée</p>
    </footer>
{% endblock %}

