{% extends 'base.html.twig' %}

{% block title %}Ajouter un nouveau code de ville{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Ajouter un nouveau code de ville</h1>
    
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Nouveau code</h5>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label for="code" class="form-label">Code de vérification</label>
                    <input type="text" class="form-control" id="code" name="code" required maxlength="50">
                    <div class="form-text">Le code unique qui sera fourni aux résidents</div>
                </div>
                
                <div class="mb-3">
                    <label for="adresse" class="form-label">Adresse</label>
                    <input type="text" class="form-control" id="adresse" name="adresse" required maxlength="255">
                    <div class="form-text">L'adresse physique associée à ce code</div>
                </div>
                
                <div class="mb-3">
                    <label for="quartier" class="form-label">Quartier</label>
                    <input type="text" class="form-control" id="quartier" name="quartier" maxlength="50">
                    <div class="form-text">Le quartier où se trouve cette adresse (optionnel)</div>
                </div>
                
                <div class="d-flex justify-content-between">
                    <a href="{{ path('admin_codes_ville_index') }}" class="btn btn-secondary">Retour à la liste</a>
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}