{% extends 'base.html.twig' %}

{% block title %}Générer des codes en batch{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Générer des codes en batch</h1>
    
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Générer plusieurs codes</h5>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label for="quartier" class="form-label">Quartier</label>
                    <input type="text" class="form-control" id="quartier" name="quartier" maxlength="50">
                    <div class="form-text">Le quartier pour lequel générer des codes (optionnel)</div>
                </div>
                
                <div class="mb-3">
                    <label for="adresse_prefix" class="form-label">Préfixe d'adresse</label>
                    <input type="text" class="form-control" id="adresse_prefix" name="adresse_prefix" required>
                    <div class="form-text">Ex: "Rue des Lilas" générera "Rue des Lilas 1", "Rue des Lilas 2", etc.</div>
                </div>
                
                <div class="mb-3">
                    <label for="nombre" class="form-label">Nombre de codes à générer</label>
                    <input type="number" class="form-control" id="nombre" name="nombre" min="1" max="100" value="10">
                    <div class="form-text">Maximum 100 codes par génération</div>
                </div>
                
                <div class="alert alert-info">
                    <strong>Note:</strong> Les codes générés seront automatiquement formatés avec un préfixe basé sur le quartier et un identifiant unique.
                </div>
                
                <div class="d-flex justify-content-between">
                    <a href="{{ path('admin_codes_ville_index') }}" class="btn btn-secondary">Retour à la liste</a>
                    <button type="submit" class="btn btn-primary">Générer les codes</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}