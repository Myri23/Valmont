{% extends 'base.html.twig' %}

{% block title %}Gestion des codes de ville{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Gestion des codes de ville</h1>
    
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">Total des codes</h5>
                    <p class="card-text display-4">{{ stats.total }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">Codes disponibles</h5>
                    <p class="card-text display-4">{{ stats.disponibles }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">Codes utilisés</h5>
                    <p class="card-text display-4">{{ stats.utilises }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h5 class="card-title">Quartiers</h5>
                    <p class="card-text display-4">{{ stats.quartiers|length }}</p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="mb-4">
        <a href="{{ path('admin_codes_ville_new') }}" class="btn btn-success me-2">Ajouter un code</a>
        <a href="{{ path('admin_codes_ville_generate_batch') }}" class="btn btn-primary me-2">Générer des codes en batch</a>
        <a href="{{ path('admin_codes_ville_export') }}" class="btn btn-secondary">Exporter les codes disponibles</a>
    </div>
    
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Liste des codes de ville</h5>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Adresse</th>
                        <th>Quartier</th>
                        <th>Date de création</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for code in codes %}
                    <tr>
                        <td>{{ code.code }}</td>
                        <td>{{ code.adresse }}</td>
                        <td>{{ code.quartier }}</td>
                        <td>{{ code.dateCreation|date('d/m/Y H:i') }}</td>
                        <td>
                            {% if code.estUtilise %}
                                <span class="badge bg-warning">Utilisé</span>
                            {% else %}
                                <span class="badge bg-success">Disponible</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if not code.estUtilise %}
                                <a href="{{ path('admin_codes_ville_delete', {'id': code.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce code ?')">Supprimer</a>
                            {% else %}
                                <button class="btn btn-sm btn-secondary" disabled>Utilisé</button>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">Aucun code trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}