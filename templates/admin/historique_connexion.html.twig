{# templates/admin/historique_connexion.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Historique des connexions{% endblock %}

{% block body %}
    <h1>Historique des connexions</h1>
    
    <div class="mb-4">
        <form method="get" class="form-inline">
            <div class="form-group mr-2">
                <label for="utilisateur">Filtrer par utilisateur :</label>
                <select name="utilisateur" id="utilisateur" class="form-control ml-2">
                    <option value="">Tous les utilisateurs</option>
                    {% for user in utilisateurs %}
                        <option value="{{ user.id }}" {% if selectedUser == user.id ~ '' %}selected{% endif %}>
                            {{ user.login }} ({{ user.nom }} {{ user.prenom }})
                        </option>
                    {% endfor %}
                </select>
            </div>
            
            <button type="submit" class="btn btn-primary">Filtrer</button>
            <a href="{{ path('admin_historique_connexion') }}" class="btn btn-secondary ml-2">Réinitialiser</a>
        </form>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Utilisateur</th>
                <th>Date de Connexion</th>
                <th>IP de Connexion</th>
            </tr>
        </thead>
        <tbody>
            {% for connexion in connexions %}
                <tr>
                    <td>{{ connexion.utilisateur.login }}</td>
                    <td>{{ connexion.dateConnexion|date('Y-m-d H:i:s') }}</td>
                    <td>{{ connexion.ipConnexion|default('-') }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center">Aucune connexion trouvée</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

