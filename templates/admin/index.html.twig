{% extends 'base.html.twig' %}

{% block title %}Administration - Utilisateurs{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Panneau d'administration</h1>
    
    <h2 class="mb-3">Liste des utilisateurs</h2>
    
    <a href="{{ path('admin_historique_connexion') }}" class="btn btn-info mb-3">Historique des connexions</a>
    <a href="{{ path('admin_utilisateur_ajouter') }}" class="btn btn-primary mb-3">Ajouter un utilisateur</a>
    <a href="{{ path('admin_appearance_edit') }}" class="btn btn-success mb-3">Personnaliser la plateforme</a>
    <a href="{{ path('admin_statistiques') }}" class="btn btn-warning mb-3">Statistiques de connexion</a>
    <a href="{{ path('admin_backups') }}" class="btn btn-secondary mb-3">Sauvegardes de la base de données</a>


    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th class="px-4">ID</th>
                    <th class="px-4">Login</th>
                    <th class="px-4">Email</th>
                    <th class="px-4">Nom</th>
                    <th class="px-4">Prénom</th>
                    <th class="px-4">Type utilisateur</th>
                    <th class="px-4">Niveau expérience</th>
                    <th class="px-4">Points consultation</th>
        	    <th class="px-4">Points connexion</th>
                    <th class="px-4">Supprimer</th>
                    <th class="px-4">Modifier Niveau experience</th>
                    <th class="px-4">Modifier profil</th>  <!-- Nouvelle colonne -->
                </tr>
            </thead>
            <tbody>
                {% for utilisateur in utilisateurs %}
                    <tr>
                        <td class="px-4">{{ utilisateur.id }}</td>
                        <td class="px-4">{{ utilisateur.login }}</td>
                        <td class="px-4">{{ utilisateur.email }}</td>
                        <td class="px-4">{{ utilisateur.nom }}</td>
                        <td class="px-4">{{ utilisateur.prenom }}</td>
                        <td class="px-4">{{ utilisateur.typeUtilisateur }}</td>
                        <td class="px-4">{{ utilisateur.niveauExperience }}</td>
                	<td class="px-4">{{ utilisateur.pointsConnexion|number_format(2, ',', ' ') }}</td>
            	 	<td class="px-4">{{ utilisateur.pointsConsultation|number_format(2, ',', ' ') }}</td>
                        <td class="px-4">
    			<a href="{{ path('admin_utilisateur_supprimer', {'id': utilisateur.id}) }}" 
       		            class="btn btn-sm btn-danger"
                            onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?')">Supprimer</a>
			<td class="px-4">
    		     	    <a href="{{ path('admin_utilisateur_modifier', {'id': utilisateur.id}) }}" class="btn btn-sm btn-primary">Modifier</a>
			</td>
			<td class="px-4">
                    <a href="{{ path('admin_utilisateur_modifier_profil', {'id': utilisateur.id}) }}" 
                       class="btn btn-sm btn-success">Modifier profil</a>
			</td>

                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center">Aucun utilisateur trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<style>
    /* Styles personnalisés pour ajouter plus d'espace */
    .table {
        border-spacing: 0 8px;
        border-collapse: separate;
    }
    
    .table th, .table td {
        padding: 12px 15px;
        vertical-align: middle;
    }
    
    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, 0.03);
    }
    
    .table-hover tbody tr:hover {
        background-color: rgba(0, 0, 0, 0.075);
    }
    
    .btn {
        margin-right: 5px;
    }
</style>
{% endblock %}
