{# templates/home/objets_show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Détails de l'objet{% endblock %}

{% block body %}
<div class="container py-4">
    <h1>Détails de l'objet</h1>
    
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">{{ objet.nom }}</h5>
            <div>
                <a href="{{ path('objets_edit', {'id': objet.id}) }}" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Modifier
                </a>
                <form method="post" action="{{ path('objets_toggle_status', {'id': objet.id}) }}" style="display: inline-block;">
                    <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ objet.id) }}">
                    <button class="btn btn-{{ objet.actif ? 'danger' : 'success' }}">
                        <i class="fas fa-power-off"></i> {{ objet.actif ? 'Désactiver' : 'Activer' }}
                    </button>
                </form>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>ID Unique:</strong> {{ objet.idUnique }}</p>
                    <p><strong>Type:</strong> {{ objet.type }}</p>
                    <p><strong>Marque:</strong> {{ objet.marque }}</p>
                    <p><strong>État:</strong> 
                        {% if objet.actif %}
                            <span class="badge bg-success">Actif</span>
                        {% else %}
                            <span class="badge bg-danger">Inactif</span>
                        {% endif %}
                    </p>
                </div>
                <div class="col-md-6">
                    <p><strong>Localisation:</strong> {{ objet.localisation }}</p>
                    <p><strong>Connectivité:</strong> {{ objet.connectivite }}</p>
                    <p><strong>Batterie:</strong> {{ objet.batteriePct }}%</p>
                    <p><strong>Dernière interaction:</strong> {{ objet.derniereInteraction|date('d/m/Y H:i') }}</p>
                </div>
            </div>
            
            <div class="mt-4">
                <h6>Description:</h6>
                <p>{{ objet.description ?? 'Aucune description' }}</p>
            </div>
            
            {% if objet.zone %}
                <div class="mt-4">
                    <h6>Zone:</h6>
                    <p>{{ objet.zone.nom }} ({{ objet.zone.type }})</p>
                </div>
            {% endif %}
            
            <!-- Informations spécifiques au type d'objet -->
            <div class="mt-4">
                <h6>Informations spécifiques:</h6>
                <!-- À compléter selon les types d'objets -->
            </div>
        </div>
    </div>
    
    <a href="{{ path('objets') }}" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Retour à la liste
    </a>
</div>
{% endblock %}