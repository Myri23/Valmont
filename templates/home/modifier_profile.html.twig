{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil - Valmont{% endblock %}

{% block body %}
<body>
    <header class="hero">
        <h1>Valmont - Modifier mon profil</h1>
    </header>

    <main class="container-form">
        <section class="card-form">
            <h2 class="title-form">Modifier mes informations :</h2>

            {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
            <fieldset class="fieldset-form">

                {{ form_row(form.login) }}
                {{ form_row(form.mot_de_passe) }}
                {{ form_row(form.nom) }}
                {{ form_row(form.prenom) }}
                {{ form_row(form.date_naissance) }}
                {{ form_row(form.sexe) }}
                {{ form_row(form.email) }}
                {{ form_row(form.type_membre) }}
                {{ form_row(form.photo_url) }}

                <div class="btn-form">
                    <button type="submit">Sauvegarder les modifications</button>
                    <a href="{{ path('accueil') }}" class="btn">Annuler</a>
                </div>

            </fieldset>
            {{ form_end(form) }}
        </section>
    </main>

    <footer>
        <p>&copy; 2025 - Valmont | Ville connect√©e</p>
    </footer>

    <script src="{{ asset('search-panel.js') }}"></script>
</body>
{% endblock %}
