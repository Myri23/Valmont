<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Valmont - Lieux d'intérêt</title>
    <link rel="stylesheet" href="{{ asset('styles/objets.css') }}">
</head>
<body>
    <nav class="navbar">
        <div class="container-nav">
            <a class="navbar-brand" href="#">Valmont</a>
            <div class="navbar-links">
                <a class="nav-link" href="{{ path('home') }}">Accueil</a>
                <a class="nav-link active" href="{{ path('ville') }}">Informations sur La Ville</a>
                <a class="nav-link active" href="{{ path('objets') }}">Objets connectés de la ville</a>
            </div>
            <div class="navbar-actions">
                <input class="search-bar" type="search" placeholder="Rechercher">
                <button class="btn btn-search">Rechercher</button>
                <a href="{{ path('formulaire') }}" class="btn btn-secondary">S'inscrire</a>
                <a href="{{ path('connexion') }}" class="btn btn-tertiary">Se connecter</a>
            </div>
        </div>
    </nav>

    <section class="container">
        <h2>Ajouter un objet connecté</h2>

    {{ form_start(form) }}
        {{ form_row(form.idUnique) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.description) }}
        {{ form_row(form.type) }}
        {{ form_row(form.marque) }}
        {{ form_row(form.etat) }}
        {{ form_row(form.localisation) }}
        {{ form_row(form.derniereInteraction) }}
        {{ form_row(form.connectivite) }}
        {{ form_row(form.batteriePct) }}
        {{ form_row(form.actif) }}
        <button type="submit" class="btn btn-primary">Ajouter</button>
    {{ form_end(form) }}
</section>

<footer class="footer">
        <p>&copy; 2025 - Valmont | Ville connectée</p>
</footer>

</body>
</html>
