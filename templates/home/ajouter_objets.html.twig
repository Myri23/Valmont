<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Valmont - Lieux d'intérêt</title>
    <link rel="stylesheet" href="{{ asset('styles/objets.css') }}">
</head>
<body>
    <nav class="navbar">
        <div class="container-nav">
            <a class="navbar-brand" href="#">Valmont</a>
            <div class="navbar-links">
                <a class="nav-link" href="{{ path('home') }}">Accueil</a>
                <a class="nav-link active" href="{{ path('ville') }}">Information</a>
                <a class="nav-link active" href="{{ app.request.uri }}">Visualisation</a>
                <a class="nav-link active" href="{{ app.request.uri }}">Gestion</a>
                <a class="nav-link active" href="{{ app.request.uri }}">Administration</a>
            </div>
            <div class="navbar-actions">
                <input class="search-bar" type="search" placeholder="Rechercher">
                <button class="btn btn-search">Rechercher</button>
            </div>
            <div class="auth-buttons">
                <a href="{{ path('formulaire') }}" class="btn btn-auth">S'inscrire</a>
                <a href="{{ path('connexion') }}" class="btn btn-auth">Se connecter</a>
            </div>
        </div>
    </nav>

    <section class="container">
        <h2>Ajouter un objet connecté</h2>
        {{ form_start(form) }}
            {{ form_row(form.idUnique) }}
            {{ form_row(form.nom) }}
            {{ form_row(form.description) }}
            {{ form_row(form.type) }}
            {{ form_row(form.marque) }}
            {{ form_row(form.etat) }}
            {{ form_row(form.localisation) }}
            {{ form_row(form.derniereInteraction) }}
            {{ form_row(form.connectivite) }}
            {{ form_row(form.batteriePct) }}
            {{ form_row(form.actif) }}
            <button type="submit" class="btn btn-primary">Ajouter</button>
        {{ form_end(form) }}

        <hr>

        <h2>Ajouter une caméra de surveillance</h2>
        {{ form_start(form_camera) }}
            {{ form_row(form_camera.objet) }}
            {{ form_row(form_camera.resolution) }}
            {{ form_row(form_camera.detection_mouvement) }}
            {{ form_row(form_camera.vision_nocturne) }}
            {{ form_row(form_camera.angle_vision) }}
            <button type="submit" class="btn btn-primary">Ajouter caméra</button>
        {{ form_end(form_camera) }}
    </section>

    <footer class="footer">
        <p>&copy; 2025 - Valmont | Ville connectée</p>
    </footer>
</body>
</html>
