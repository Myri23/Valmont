{# templates/gestion/zone/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Détails de la zone{% endblock %}

{% block body %}
    <div class="container py-4">
        <h1>Détails de la zone</h1>
        
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">{{ zone.nom }}</h5>
                <div>
                    <a href="{{ path('gestion_zone_edit', {'id': zone.id}) }}" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Modifier
                    </a>
                    <a href="{{ path('gestion_zone_objets', {'id': zone.id}) }}" class="btn btn-primary">
                        <i class="fas fa-plug"></i> Objets connectés ({{ zone.objetsConnectes|length }})
                    </a>
                    <a href="{{ path('gestion_zone_associer_objets', {'id': zone.id}) }}" class="btn btn-success">
                        <i class="fas fa-link"></i> Associer des objets
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Type :</strong> {{ zone.type|title }}</p>
                        <p><strong>Coordonnées :</strong> {{ zone.coordonnees ?? 'Non spécifiées' }}</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Description :</strong></p>
                        <p>{{ zone.description ?? 'Aucune description' }}</p>
                    </div>
                </div>
            </div>
            <div class="card-footer text-center">
                <form method="post" action="{{ path('gestion_zone_delete', {'id': zone.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette zone ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ zone.id) }}">
                    <button class="btn btn-sm btn-danger">
                        <i class="fas fa-trash"></i> Supprimer
                    </button>
                </form>
            </div>
        </div>
        
        <a href="{{ path('gestion_zone_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
    </div>
{% endblock %}