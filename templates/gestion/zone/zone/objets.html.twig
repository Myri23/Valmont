{# templates/gestion/zone/objets.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Objets de la zone {{ zone.nom }}{% endblock %}

{% block body %}
    <div class="container py-4">
        <h1>Objets connectés de la zone {{ zone.nom }}</h1>
        
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        
        <div class="mb-3">
            <a href="{{ path('gestion_zone_show', {'id': zone.id}) }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour à la zone
            </a>
            <a href="{{ path('gestion_zone_associer_objets', {'id': zone.id}) }}" class="btn btn-success">
                <i class="fas fa-link"></i> Associer des objets
            </a>
        </div>
        
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Type</th>
                        <th>État</th>
                        <th>Batterie</th>
                        <th>Dernière interaction</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for objet in objets %}
                        <tr>
                            <td>{{ objet.id }}</td>
                            <td>{{ objet.nom }}</td>
                            <td>{{ objet.type }}</td>
                            <td>
                                {% if objet.actif %}
                                    <span class="badge bg-success">Actif</span>
                                {% else %}
                                    <span class="badge bg-danger">Inactif</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="progress" style="height: 20px;">
                                    <div class="progress-bar 
                                        {% if objet.batteriePct < 20 %}
                                            bg-danger
                                        {% elseif objet.batteriePct < 50 %}
                                            bg-warning
                                        {% else %}
                                            bg-success
                                        {% endif %}" 
                                        role="progressbar" style="width: {{ objet.batteriePct }}%;" 
                                        aria-valuenow="{{ objet.batteriePct }}" aria-valuemin="0" aria-valuemax="100">
                                        {{ objet.batteriePct }}%
                                    </div>
                                </div>
                            </td>
                            <td>{{ objet.derniereInteraction|date('d/m/Y H:i') }}</td>
                            <td>
                                <form method="post" action="{{ path('gestion_zone_dissocier_objet', {'id': zone.id, 'objetId': objet.id}) }}" style="display: inline-block;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('dissocier' ~ objet.id) }}">
                                    <button class="btn btn-sm btn-danger" title="Dissocier de la zone">
                                        <i class="fas fa-unlink"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7">Aucun objet connecté n'est associé à cette zone</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}