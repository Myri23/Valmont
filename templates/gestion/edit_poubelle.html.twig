{% extends 'base.html.twig' %}
{% block title %}Modifier une poubelle connectée{% endblock %}
{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Modifier une poubelle connectée</h1>
    
    <div class="mb-4">
        <a href="{{ path('app_poubelle_connectee_list') }}" class="btn-header">Retour à la liste</a>
    </div>
    
    {{ form_start(form) }}
    <div class="card mb-4">
        <div class="card-header" style="background-color: #354E52; color: white; padding: 12px 15px; border-top-left-radius: 15px; border-top-right-radius: 15px;">
            <h2 style="margin: 0; font-size: 1.25rem;">Informations générales de l'objet connecté</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.objet.nom) }}
                    {{ form_row(form.objet.marque) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.objet.etat) }}
                    {{ form_row(form.objet.localisation) }}
                    {{ form_row(form.objet.batteriePct) }}
                    {{ form_row(form.objet.actif) }}
                </div>
            </div>
            {# Champ type caché mais préconfiguré #}
            {{ form_widget(form.objet.type, {'attr': {'class': 'd-none'}}) }}
        </div>
    </div>
    
    <div class="card mb-4">
        <div class="card-header" style="background-color: #354E52; color: white; padding: 12px 15px; border-top-left-radius: 15px; border-top-right-radius: 15px;">
            <h2 style="margin: 0; font-size: 1.25rem;">Caractéristiques spécifiques de la poubelle</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.poubelle.niveauRemplissage) }}
                    {{ form_row(form.poubelle.capaciteTotale) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.poubelle.typeDechets) }}
                    {{ form_row(form.poubelle.compacteur) }}
                    {{ form_row(form.poubelle.derniereCollecte) }}
                </div>
            </div>
        </div>
    </div>
    
    <div class="d-flex justify-content-between mb-4">
        <a href="{{ path('app_poubelle_connectee_list') }}" class="btn-secondary">Annuler</a>
        <button type="submit" class="btn-primary">Enregistrer les modifications</button>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}
