{% extends 'base.html.twig' %}

{% block title %}Sélection du type d'objet connecté{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Sélectionner le type d'objet connecté</h1>
    
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Poubelle Connectée</h5>
                    <p class="card-text">Système intelligent de gestion des déchets avec surveillance du niveau de remplissage.</p>
                    <a href="{{ path('app_poubelle_connectee_new') }}" class="btn btn-primary">Ajouter une poubelle</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Parking Intelligent</h5>
                    <p class="card-text">Système de gestion de places de stationnement avec suivi des disponibilités en temps réel.</p>
                    <a href="{{ path('app_parking_intelligent_new') }}" class="btn btn-primary">Ajouter un parking</a>
                </div>
            </div>
        </div>
        
        <!-- Réservez de la place pour d'autres types d'objets à l'avenir -->
        <div class="col-md-4 mb-4">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h5 class="card-title text-muted">Bientôt disponible</h5>
                    <p class="card-text text-muted">D'autres types d'objets connectés seront disponibles prochainement.</p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="mt-3">
        <a href="{{ path('app_objets_list') }}" class="btn btn-secondary">Retour à la liste</a>
    </div>
</div>
{% endblock %}
