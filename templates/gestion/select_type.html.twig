{% extends 'base.html.twig' %}

{% block title %}Sélection du type d'objet connecté{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Sélectionner le type d'objet connecté</h1>
    
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Poubelle Connectée</h5>
                    <p class="card-text">Système intelligent de gestion des déchets avec surveillance du niveau de remplissage.</p>
                    <div class="d-flex gap-2">
                        <a href="{{ path('app_poubelle_connectee_new') }}" class="btn btn-primary">Ajouter une poubelle</a>
                        <a href="{{ path('app_poubelle_connectee_list') }}" class="btn btn-success">Gérer l'objet</a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Parking Intelligent</h5>
                    <p class="card-text">Système de gestion de places de stationnement avec suivi des disponibilités en temps réel.</p>
                    <div class="d-flex gap-2">
                        <a href="{{ path('app_parking_intelligent_new') }}" class="btn btn-primary">Ajouter un parking</a>
                        <a href="{{ path('app_parking_intelligent_list') }}" class="btn btn-success">Gérer l'objet</a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Lampadaire Intelligent</h5>
                    <p class="card-text">Système d'éclairage automatisé avec programmation de l'heure d'allumage et de la durée.</p>
                    <div class="d-flex gap-2">
                        <a href="{{ path('app_lampadaire_intelligent_new') }}" class="btn btn-primary">Ajouter un lampadaire</a>
                        <a href="{{ path('app_lampadaire_intelligent_list') }}" class="btn btn-success">Gérer l'objet</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Nouvel encadré pour les rapports -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card bg-info text-white mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Rapports PDF</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Télécharger les données sous forme de rapports PDF</p>
                    <div class="d-flex flex-wrap gap-2">
                        <a href="{{ path('app_gestion_rapport_objets') }}" class="btn btn-light">
                            <i class="fas fa-file-pdf"></i> Tous les objets
                        </a>
                        <a href="{{ path('app_gestion_rapport_poubelles') }}" class="btn btn-light">
                            <i class="fas fa-trash"></i> Poubelles
                        </a>
                        <a href="{{ path('app_gestion_rapport_parkings') }}" class="btn btn-light">
                            <i class="fas fa-parking"></i> Parkings
                        </a>
                        <a href="{{ path('app_gestion_rapport_lampadaires') }}" class="btn btn-light">
                            <i class="fas fa-lightbulb"></i> Lampadaires
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Réservez de la place pour d'autres types d'objets à l'avenir -->
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h5 class="card-title text-muted">Bientôt disponible</h5>
                    <p class="card-text text-muted">D'autres types d'objets connectés seront disponibles prochainement.</p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="mt-3">
        <a href="{{ path('app_objets_list') }}" class="btn btn-primary">Retour à la liste</a>
    </div>
</div>
{% endblock %}
