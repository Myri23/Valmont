{% extends 'base.html.twig' %}

{% block title %}Liste des Poubelles Connectées{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Gestion des Poubelles Connectées</h1>
    <p class="lead">Consultez et gérez vos poubelles connectées.</p>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h2 class="h5 mb-0">Liste des poubelles connectées</h2>
        </div>
        <div class="card-body">
            {% if poubelles is empty %}
                <p class="text-muted text-center">Aucune poubelle connectée enregistrée.</p>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nom</th>
                                <th>Localisation</th>
                                <th>Statut</th>
                                <th>Niveau de remplissage</th>
                                <th>Batterie</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for poubelle in poubelles %}
                                <tr>
                                    <td>{{ poubelle.objet.idUnique }}</td>
                                    <td>{{ poubelle.objet.nom }}</td>
                                    <td>{{ poubelle.objet.localisation }}</td>
                                    <td>
                                        <span class="badge {% if poubelle.objet.actif %}bg-success{% else %}bg-danger{% endif %}">
                                            {{ poubelle.objet.actif ? 'Actif' : 'Inactif' }}
                                        </span>
                                    </td>
                                    <td>
                                        <div class="progress" style="height: 20px;">
                                            <div class="progress-bar 
                                                {% if poubelle.niveauRemplissage > 80 %}
                                                    bg-danger
                                                {% elseif poubelle.niveauRemplissage > 50 %}
                                                    bg-warning
                                                {% else %}
                                                    bg-success
                                                {% endif %}" 
                                                role="progressbar" 
                                                style="width: {{ poubelle.niveauRemplissage }}%"
                                                aria-valuenow="{{ poubelle.niveauRemplissage }}" 
                                                aria-valuemin="0" 
                                                aria-valuemax="100">
                                                {{ poubelle.niveauRemplissage }}%
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="progress" style="height: 20px;">
                                            <div class="progress-bar 
                                                {% if poubelle.objet.batteriePct < 20 %}
                                                    bg-danger
                                                {% elseif poubelle.objet.batteriePct < 50 %}
                                                    bg-warning
                                                {% else %}
                                                    bg-success
                                                {% endif %}" 
                                                role="progressbar" 
                                                style="width: {{ poubelle.objet.batteriePct }}%"
                                                aria-valuenow="{{ poubelle.objet.batteriePct }}" 
                                                aria-valuemin="0" 
                                                aria-valuemax="100">
                                                {{ poubelle.objet.batteriePct }}%
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            {# Chaque route utilise le bon paramètre #}
                                            <a href="{{ path('app_poubelle_connectee_show', {'idUnique': poubelle.objet.idUnique}) }}" class="btn btn-sm btn-info">
                                                <i class="fas fa-eye"></i> Voir
                                            </a>
                                            
