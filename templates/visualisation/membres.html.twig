{% extends 'base.html.twig' %}

{% block title %}Administration - Utilisateurs{% endblock %}

{% block body %}
<div class="background-image-container">

    <div class="container mt-4 py-5" style="background: rgba(255, 255, 255, 0.90); border-radius: 15px; text-align: center;">
    <h1 class="mb-4"> üë§ Membres de Valmont</h1>
    
    
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th class="px-4">Photo de Profil</th>
                    <th class="px-4">Login</th>
                    <th class="px-4">Email</th>
                    <th class="px-4">Nom</th>
                    <th class="px-4">Pr√©nom</th>
                    <th class="px-4">Type de Membre</th>
                </tr>
            </thead>
            <tbody>
                {% for utilisateur in utilisateurs %}
                    <tr>
                        <td class="px-4">
                            {% if utilisateur.getPhotoUrl() %}
                                <img src="{{ utilisateur.getPhotoUrl() }}" alt="Photo de profil" class="img-fluid" style="max-width: 100px; max-height: 100px;">
                            {% else %}
                                <img src="{{ asset('images/pdp.jpg') }}" alt="Photo de profil" class="img-fluid" style="max-width: 100px; max-height: 100px;">
                            {% endif %}
                        </td>
                        <td class="px-4">{{ utilisateur.login }}</td>
                        <td class="px-4">
                            <a href="mailto:{{ utilisateur.email }}">{{ utilisateur.email }}</a>
                        </td>
                        <td class="px-4">{{ utilisateur.nom }}</td>
                        <td class="px-4">{{ utilisateur.prenom }}</td>
                        <td class="px-4">{{ utilisateur.getTypeMembre() }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center">Aucun utilisateur trouv√©</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
</div>

<style>
    .background-image-container {
        background-image: url('{{ asset('images/valmont_membres.jpg') }}');
        background-size: cover;
        background-position: center;
        background-attachment: fixed; /* effet de d√©filement parallax */
        min-height: 100vh;
        padding: 30px 0;
    }
    .table {
        border-spacing: 0 8px;
        border-collapse: separate;
    }
    
    .table th, .table td {
        padding: 12px 15px;
        vertical-align: middle;
    }
    
    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, 0.03);
    }
    
    .table-hover tbody tr:hover {
        background-color: rgba(0, 0, 0, 0.075);
    }
    
    .btn {
        margin-right: 5px;
    }
</style>
{% endblock %}
