{% extends 'base.html.twig' %}

{% block title %}Objets Connectés{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Objets Connectés</h1>
    
    <div class="mb-4">
        <a href="{{ path('app_objets_select_type') }}" class="btn btn-header">
            <i class="fas fa-plus-circle"></i> Ajouter un objet connecté
        </a>
    </div>
    
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2 class="h5 mb-0">Liste des objets connectés</h2>
        </div>
        <div class="card-body">
            {% if objets is empty %}
                <p class="text-muted text-center">Aucun objet connecté enregistré.</p>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nom</th>
                                <th>Type</th>
                                <th>État</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for objet in objets %}
                                <tr>
                                    <td>{{ objet.idUnique }}</td>
                                    <td>{{ objet.nom }}</td>
                                    <td>{{ objet.type }}</td>
                                    <td>
                                        <span class="badge {% if objet.etat == 'Actif' %}bg-success{% else %}bg-danger{% endif %}">
                                            {{ objet.etat }}
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="#" class="btn btn-sm btn-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="#" class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="#" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
